{
  "name": "CSS Gradient Generator",
  "description": "Gradient generator for CSS",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "32": "icon_32.png",
    "48": "icon_48.png",
    "64": "icon_64.png",
    "128": "icon_128.png"
  },

  "permissions": ["activeTab"],

  "action": {
    "default_icon": "icon_128.png",
    "default_popup": "index.html"
  }
}